{% extends 'NominaBundle:Default:main.html.twig' %}
{% block title 'Usuarios'%}

    {% block content %}
        <div class="row numpad">
            <div class="col-lg-12">
                <h1>Editar Usuario</h1>
                <ol class="breadcrumb">
                    <li><a href="javascript:"><i class="fa fa-home"></i> Inicio</a></li>
                    <li><a href='{{ path('usuario_index') }}'><i class="fa fa-list"></i> Usuarios</a></li>
                    <li><i class="fa fa-edit"></i> Editar</li>
                    <a class="btn btn-primary pull-right" href="{{ path('usuario_index') }}">Volver al listado</a>
                </ol>
            </div>
        </div>

        <div class="col-sm-12 table-responsive">
            <table class="table table-bordered table-hover tablesorter records_list table-striped">
                <tbody>
                    <tr>
                        <th>Nombre de Usuario</th>
                        <td>{{ usuario.usuName }}</td>
                    </tr>
                    <tr>
                        <th>CÃ©dula</th>
                        <td>{{ usuario.usuCedula }}</td>
                    </tr>
                    <tr>
                        <th>Salario</th>
                        <td class="number_format">{{ usuario.usuSalary }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="col-sm-2">
                <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-sm-2">
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    {% endblock %}
